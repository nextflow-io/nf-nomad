plugins {
    id "nf-nomad@99.99.99"
}

process {
    executor = "nomad"
}

nomad {

    client {
        address = "http://127.0.0.1:4646"
    }

    jobs {
        deleteOnCompletion = true
        volumes = [
            { type "host" name "scratchdir" path '/tmp/nomad/nomad_temp/scratchdir/'},
        ]
        spreads = {
            spread = [ name:'node.datacenter', weight: 350 ]
        }
    }

    namespace = 'nf-nomad'

    secrets {
        enabled = true
    }
}
