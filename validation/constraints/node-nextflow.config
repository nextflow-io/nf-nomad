plugins {
    id "nf-nomad@${System.getenv("NOMAD_PLUGIN_VERSION") ?: "99.99.99"}"
}

process {
    executor = "nomad"
}

nomad {

    client {
        address = "http://localhost:4646"
    }

    jobs {
        deleteOnCompletion = false
        volume = { type "host" name "scratchdir" }

        constraints = {
            node {
                unique = [ name: params.RUN_IN_NODE ]
            }
        }
    }

}

profiles{
    localnomad{
        process {
            withName: sayHello {
                datacenters = ['test-datacenter', 'demo-datacenter']
                constraints = {
                    node {
                        unique = [ name: params.RUN_IN_NODE ]
                    }
                }
            }
        }
    }
}